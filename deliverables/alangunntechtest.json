{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseName": {
            "type": "string",
            "defaultValue" : "agtechtest",
            "metadata": {
              "description": "Base name of the resource such as web app name and app service plan"
            },
            "minLength": 2
        }
    ,
        "rgLocation": {
                        "type": "array",
            "defaultValue": [
                "East US",
                "UK West",
                "West Europe"

            ]
        }
    },
    "variables": {},
    "resources": [

        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('rgLocation')[copyIndex()]]",
            "name": "[concat(parameters('baseName'),'-res-group-',copyIndex())]",
            "properties": {},
            "copy": { 
                "name": "resGroupCopy", 
                "count": "[length(parameters('rgLocation'))]" 
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "storageDeployment",
            "resourceGroup": "[concat(parameters('baseName'),'-res-group-',copyIndex())]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', concat(parameters('baseName'),'-res-group-',copyIndex()))]"
            ],
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Storage/storageAccounts",
                            "apiVersion": "2017-10-01",
                            "name": "[concat(parameters('baseName'),copyIndex())]",
                            "location": "[parameters('rgLocation')[copyIndex()]]",
                            "kind": "StorageV2",
                            "sku": {
                                "name": "Standard_LRS"
                            }
                        }
                    ],
                    "outputs": {}
                }
            },
            "copy": {
                "name": "deployCopy",
                "count": "[length(parameters('rgLocation'))]"
            }
        }
    ],
    "outputs": {}
}